<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_padding_l">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/im_undo"
            android:layout_width="@dimen/action_img_width_height"
            android:layout_height="@dimen/action_img_width_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_padding_m"
            android:src="@drawable/icon_undo_disable" />

        <ImageView
            android:id="@+id/im_redo"
            android:layout_width="@dimen/action_img_width_height"
            android:layout_height="@dimen/action_img_width_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_padding_s"
            android:layout_marginRight="@dimen/margin_padding_l"
            android:src="@drawable/icon_redo_disable" />

        <ImageView
            android:id="@+id/im_export"
            android:layout_width="@dimen/action_img_width_height"
            android:layout_height="@dimen/action_img_width_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_padding_l"
            android:src="@drawable/icon_export_disable" />
    </LinearLayout>

    <ImageView
        android:id="@+id/im_delete"
        android:layout_width="@dimen/action_img_width_height"
        android:layout_height="@dimen/action_img_width_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_padding_l"
        android:src="@drawable/icon_delete_disable" />
</LinearLayout>