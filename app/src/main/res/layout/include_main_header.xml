<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header_root"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/teal_400">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/left_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/icon_system" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            style="@style/text_white_bigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="200dp"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/right_icon_video"
                android:layout_width="@dimen/navbar_img_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/margin_padding_l"
                android:paddingTop="@dimen/margin_padding_l"
                android:src="@drawable/icon_video"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/right_icon_rules"
                android:layout_width="@dimen/navbar_img_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/margin_padding_l"
                android:paddingTop="@dimen/margin_padding_l"
                android:src="@drawable/icon_important_tip"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>